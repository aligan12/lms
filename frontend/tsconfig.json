{
	"compilerOptions": {
		"outDir": "./dict/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node", "jest", "@testing-library/jest-dom"]
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["./config/jest/setupTests.ts", "./src/**/*.ts", "./src/**/*.tsx", "@types"]
}
